<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory android:title="@string/personalization_pref_title">
		<EditTextPreference android:title="@string/name_pref_title"
			android:key="name" android:defaultValue="@string/you" android:dialogTitle="@string/name_pref_title"
			android:dialogMessage="@string/name_pref_summary"></EditTextPreference>
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/ui_pref_title">
	    <ListPreference
		    android:key="theme" 
		    android:title="@string/pref_theme_title"
		    android:summary="@string/pref_theme_summary"
		    android:entries="@array/theme_names"
		    android:entryValues="@array/theme_keys"
		    android:defaultValue="androminion" />
		<CheckBoxPreference android:title="@string/abc_header_pref_title"
		android:summary="@string/abc_header_pref_summary"
			android:defaultValue="true" android:key="abc_header"></CheckBoxPreference>
		<CheckBoxPreference android:title="@string/one_turn_logs_pref_title"
			android:summary="@string/one_turn_logs_pref_summary"
			android:defaultValue="false" android:key="one_turn_logs"></CheckBoxPreference>
		<CheckBoxPreference android:title="@string/hide_card_counts_pref_title"
			android:summary="@string/hide_card_counts_pref_summary"
			android:defaultValue="false" android:key="hide_card_counts"></CheckBoxPreference>
		<CheckBoxPreference android:key="exitonback"
			android:defaultValue="true" android:title="@string/exitonback_pref_title"
			android:summary="@string/exitonback_pref_summary"></CheckBoxPreference>
		<CheckBoxPreference android:key="toastsoff" android:defaultValue="false" android:summary="@string/toastsoff_pref_summary" android:title="@string/toastsoff_pref_title"></CheckBoxPreference>
		<CheckBoxPreference
		    android:key="showenglishnames"
			android:defaultValue="false"
			android:title="@string/showenglishnames_pref_title"
			android:summary="@string/showenglishnames_pref_summary"/>
</PreferenceCategory>
	<PreferenceCategory android:title="@string/game_play_pref_title">
		<CheckBoxPreference android:title="@string/quick_play_pref_title"
		android:summary="@string/quick_play_pref_summary"
			android:defaultValue="false" android:key="quick_play"></CheckBoxPreference>
        <CheckBoxPreference android:title="@string/action_chains_pref_title"
        android:summary="@string/action_chains_pref_summary"
            android:defaultValue="false" android:key="action_chains"></CheckBoxPreference>
		<CheckBoxPreference android:title="@string/plat_colony_pref_title"
		android:summary="@string/plat_colony_pref_summary"
			android:defaultValue="false" android:key="plat_colony"></CheckBoxPreference>
</PreferenceCategory>
	<PreferenceCategory android:title="@string/notif_pref_title">
		<CheckBoxPreference android:title="@string/allvibes_pref_title"
			android:key="allvibeson" android:defaultValue="true"></CheckBoxPreference>
		<PreferenceScreen android:dependency="allvibeson"
			android:title="@string/vibescreen_pref_title">
			<CheckBoxPreference android:key="clickvibeon"
				android:summary="@string/clickvibeon_pref_summary" android:title="@string/clickvibeon_pref_title"
				android:defaultValue="true"></CheckBoxPreference>
			<CheckBoxPreference android:key="actionvibeon"
				android:summary="@string/actionvibeon_pref_summary" android:title="@string/actionvibeon_pref_title"
				android:defaultValue="false"></CheckBoxPreference>
			<CheckBoxPreference android:key="turnvibeon"
				android:summary="@string/turnvibeon_pref_summary" android:title="@string/turnvibeon_pref_title"
				android:defaultValue="false"></CheckBoxPreference>
			<CheckBoxPreference android:key="gamevibeon"
				android:summary="@string/gamevibeon_pref_summary" android:title="@string/gamevibeon_pref_title"
				android:dependency="allvibeson" android:defaultValue="false"></CheckBoxPreference>
		</PreferenceScreen>




	</PreferenceCategory>
	<PreferenceCategory android:title="@string/logging_pref_title">
		<CheckBoxPreference android:title="@string/logging_enable_pref_title" android:summary="@string/logging_enable_pref_summary" android:defaultValue="false" android:key="enable_logging"></CheckBoxPreference>
		<EditTextPreference android:dialogMessage="@string/logging_dir_pref_summary" android:dialogTitle="@string/logging_dir_pref_title" android:key="logdir" android:title="@string/logging_dir_pref_title" android:defaultValue="/logs"></EditTextPreference>
	</PreferenceCategory></PreferenceScreen>
